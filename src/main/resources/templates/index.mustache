{{>layout/header}}

<h1>실시간 커뮤니티</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
<!--            현재 세션유저-->
            {{#myName}}
                이름 : <span id="user"><a href="/mypage/{{myId}}">{{myName}}</a></span> 이메일 : <span id="email">{{myEmail}}</span>
                <a href="/logout" class="btn btn-info active" role="button">Logout</a>
            {{/myName}}
            {{^myName}}
                <button type="button" class="btn btn-success active" id="btn-login-google">Google Login</button>
                <button type="button" class="btn btn-secondary active" id="btn-login-naver">Naver Login</button>
            {{/myName}}
        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>댓글 수</th>
            <th>작성자</th>
            <th>최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
<!--        게시물-->
        {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/posts/lookup/{{id}}">{{title}}</a></td>           <!-- 게시물 id -->
                <td><span class="badge badge-info badge-pill">{{comments.size}}</span></td>     <!--PostsListResponseDto -> List<CommentResponseDto> -> size -->
                <td><a href="/mypage/{{user.id}}">{{author}}</a></td>           <!-- 게시물 주인 id -->
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>

{{>layout/footer}}